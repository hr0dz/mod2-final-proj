<% @note.errors.full_messages.each do |error| %>
<%= error %><br>
<% end %>


<h2>New Note Form</h2>

<%= form_for [@business, @note] do |f| %>
<%= f.label :'Title:' %><br>
<%= f.text_field :title %><br>
<br>
<%= f.label :'Content' %><br>
<%= f.text_area :content %><br> 
<br>
<%= f.select :category, ["request", "run"], :prompt => "Note type select..." %><br>
<br>
<%= f.submit %>
<% end %>

